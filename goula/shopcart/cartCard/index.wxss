.card {
  margin: 10rpx auto !important;
}

.right-card {
  height: 180rpx !important;
  width: 180rpx !important;
  border-radius: 12rpx !important;
}

.content {
  margin-top: 10rpx;
  color: #666;
  font-size: 26rpx;
  display:flex;
  flex-direction: column;
  justify-content: space-between;
}
.card-top{
  flex:1;
  height: initial;
}
.card-bottom{
  margin-top:60rpx;
  display:flex;
  flex-direction: row;
  justify-content: space-between;
}
.count{
  color:#d81e06;
  background-color: #f4ecec;
}
.countinput{
  color:#d81e06;
  background-color: #faf5f5;
}

.card-title{
  font-size:26rpx;
  font-weight: bold;
}