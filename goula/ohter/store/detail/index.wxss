.body{
  background-color: #eee;
}
.top-card{
  background-color: #fff;
  margin: 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 2px 4px rgba(0, 0, 0, .12), 0 0 6px rgba(0, 0, 0, .04);
  padding: 30rpx;
}
.store-name{
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.store-item{
  padding:4rpx 0 ;
  font-size: 24rpx;
  color: darkgray;
}

.image{
  margin: 30rpx;
}

.store-image{
  display: flex;
  justify-content: space-around;
  flex-direction: row;
}

.store-map{
  width:100%;
  background-color: #fff;
  padding:6rpx;
  border-radius: 6rpx;
}
.store-image image{
  height:200rpx;
  padding:10rpx;
}
.store-map map{
  width:100%
}

.store-button{
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.store-name-s{
  display: flex;
  justify-content: space-between;
}
.daohang{
  color: #333;
  font-size: 26rpx;
}