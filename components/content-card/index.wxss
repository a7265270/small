.content-card {
  display: flex;
  margin:20rpx 30rpx;
  flex-direction: column;
  background-color: #fff;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px -4rpx 16rpx 0px rgba(148, 163, 178, 0.05);
  border-radius: 20rpx 20rpx 0px 0px;
  border-bottom: 20rpx solid #f7f7f7;
}

.card-dot {
  width: 18rpx;
  height: 18rpx;
  border-radius: 50%;
  border: 6rpx solid #d81e06;
  margin: 6rpx 6rpx 0 26rpx;
}

.card-top {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 100rpx;
  justify-content: space-between;
}

.content-name {
  font-size: 32rpx;
  font-family: PingFangSC-Regular;
  font-weight: 500;
  color: rgb(233, 13, 49);
  line-height: 20px;
  margin-left: 8px;
  display: flex;
}
.content-name-right{
  font-size:24rpx;
  color:#999;
  margin-right:26rpx;
}

.card-bottom {
  width: 750rpx;
  box-sizing: border-box;
}

.card-padding {
  width:100%;
  padding: 0rpx 20rpx 40rpx 20rpx;
}

.padd{
  padding-bottom: 40rpx;
}
